<ContentView>
    <StackLayout>
        <StackLayout Margin="new Thickness(20)" Orientation="StackOrientation.Horizontal">
            <Label Text="@($"{LabelTitle} {CounterState.CurrentCount}")" FontSize="40" HorizontalOptions="LayoutOptions.StartAndExpand" />
            <Button Text="Increment" OnClick="@CounterState.IncrementCount" VerticalOptions="LayoutOptions.Center" Padding="10" />
        </StackLayout>
        @if (todos != null)
        {
            <StackLayout Margin="new Thickness(20)" Orientation="StackOrientation.Vertical">
                @foreach (Todo todo in todos.Take(10))
                {
                    <TodoComponent Todo="todo" />
                }
            </StackLayout>
        }
        @*
            <BlazorWebView VerticalOptions="LayoutOptions.FillAndExpand">
                <BlazorHybridDesktop.WebUI.App />
            </BlazorWebView>
        *@
    </StackLayout>
</ContentView>
