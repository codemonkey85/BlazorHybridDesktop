<ContentView>
    <StackLayout>
        <StackLayout Margin="new Thickness(20)" Orientation="StackOrientation.Horizontal">
            <Label Text="@($"{LabelTitle}")" FontSize="40" HorizontalOptions="LayoutOptions.StartAndExpand" />
            <Label Text="Show web?" /> <Switch IsToggledChanged="CheckboxClicked" />
        </StackLayout>
        @if (ShowWeb)
        {
            <BlazorWebView VerticalOptions="LayoutOptions.FillAndExpand">
                <BlazorHybridDesktop.WebUI.App />
            </BlazorWebView>
        }
        else
        {
            <NativeIndexComponent />
        }
    </StackLayout>
</ContentView>
